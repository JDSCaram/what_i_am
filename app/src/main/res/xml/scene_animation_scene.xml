<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cloud_three"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="200dp"
            motion:layout_constraintEnd_toEndOf="@+id/cloud_two"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cloud_one"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cloud_two"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            motion:layout_constraintEnd_toEndOf="@+id/cloud_one"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cloud_four"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="250dp"
            android:layout_marginRight="104dp"
            motion:layout_constraintEnd_toEndOf="@+id/cloud_three"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/bird"
            android:layout_width="200dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="@id/cloud_two"
            motion:layout_constraintStart_toStartOf="@id/cloud_two"
            motion:layout_constraintTop_toBottomOf="@id/cloud_two" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/cloud_three"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="100dp"
            motion:layout_constraintStart_toStartOf="@+id/cloud_four"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cloud_one"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="80dp"
            motion:layout_constraintStart_toStartOf="@+id/cloud_three"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cloud_two"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="150dp"
            motion:layout_constraintStart_toStartOf="@+id/cloud_one"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/cloud_four"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_editor_absoluteX="101dp" />
        <Constraint
            android:id="@+id/bird"
            android:layout_width="200dp"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="@id/cloud_four"
            motion:layout_constraintStart_toStartOf="@id/cloud_four"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" />
    </ConstraintSet>
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="20000" />
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start"
        motion:autoTransition="jumpToEnd"
        motion:duration="5000"
        />
</MotionScene>